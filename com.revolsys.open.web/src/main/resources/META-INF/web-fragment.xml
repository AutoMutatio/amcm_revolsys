<?xml version="1.0" encoding="UTF-8"?>

<web-fragment
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd
  "
  version="3.0"
>
  <name>com_revolsys_open_web_default</name>

  <context-param>
    <param-name>log4jExposeWebAppRoot</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.xml</param-value>
  </context-param>

  <filter>
    <filter-name>utf8</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>utf8</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>com.revolsys.ui.web.servlet.listener.ContextCleanupListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.revolsys.ui.web.servlet.listener.DriverManagerCleanupListener</listener-class>
  </listener>  
</web-fragment>