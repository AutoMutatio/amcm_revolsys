#!/bin/sh

APP_HOME=`dirname $0`/..
                               
LOCALCLASSPATH="$APP_HOME/conf:$LOCALCLASSPATH"
LOCALCLASSPATH="$APP_HOME/../build/classes:$LOCALCLASSPATH"

DIRLIBS="${APP_HOME}/lib/*.jar"
for i in ${DIRLIBS}
do
    if [ "$i" != "${DIRLIBS}" ] ; then
      LOCALCLASSPATH="$i":$LOCALCLASSPATH
    fi
done

DIRLIBS="${APP_HOME}/lib/*.zip"
for i in ${DIRLIBS}
do
    if [ "$i" != "${DIRLIBS}" ] ; then
      LOCALCLASSPATH="$i":$LOCALCLASSPATH
    fi
done

java -cp $LOCALCLASSPATH $*
