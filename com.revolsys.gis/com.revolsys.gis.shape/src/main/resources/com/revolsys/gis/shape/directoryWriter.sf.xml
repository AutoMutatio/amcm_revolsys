<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-2.5.xsd
  "
>
  <bean
    id="shapeDirectoryWriter"
    class="com.revolsys.gis.format.shape.io.ShapeDirectoryWriter"
    p:directory="."
    p:useZeroForNull="false"
  />
  
  <bean
    id="shapeDirectoryStatisticsWriter"
    class="com.revolsys.gis.io.StatisticsWriter"
  >
    <constructor-arg ref="shapeDirectoryWriter" />
  </bean>

  <bean
    id="shapeDirectoryWriterProcess"
    class="com.revolsys.gis.parallel.WriterProcess"
    p:writer-ref="shapeDirectoryStatisticsWriter"
  />
 
  <bean
    id="shapeDirectoryStatisticsWriterStats"
    factory-bean="shapeDirectoryStatisticsWriter"
    factory-method="getStatistics"
  />
</beans>