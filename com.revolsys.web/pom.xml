<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/maven-v4_0_0.xsd
  "
>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.revolsys</groupId>
  <artifactId>com.revolsys.web</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>Revolution Systems Web</name>
  <packaging>jar</packaging>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
  	<dependency>
  		<groupId>javax.servlet</groupId>
  		<artifactId>servlet-api</artifactId>
  		<version>2.4</version>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
  		<groupId>javax.servlet.jsp</groupId>
  		<artifactId>jsp-api</artifactId>
  		<version>2.0</version>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
  		<groupId>com.revolsys</groupId>
  		<artifactId>com.revolsys.util</artifactId>
  		<version>${com.revolsys.util.version}</version>
  	</dependency>
  	<dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-webmvc</artifactId>
      <version>${org.springframework.version}</version>
      <exclusions>
        <exclusion>
          <artifactId>commons-logging</artifactId>
          <groupId>commons-logging</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  	<dependency>
  		<groupId>com.revolsys.orm</groupId>
  		<artifactId>com.revolsys.orm.core</artifactId>
  		<version>${com.revolsys.orm.version}</version>
  	</dependency>
  	<dependency>
  		<groupId>org.apache.xbean</groupId>
  		<artifactId>xbean-spring</artifactId>
  		<version>3.5</version>
  		<exclusions>
  			<exclusion>
  				<artifactId>commons-logging</artifactId>
  				<groupId>commons-logging</groupId>
  			</exclusion>
  		</exclusions>
  	</dependency>
  </dependencies>
  <repositories>
    <repository>
        <id>open.revolsys.com</id>
        <url>http://open.revolsys.com/m2/repository/</url>
        <releases>
           <enabled>true</enabled>
        </releases>
        <snapshots>
          <enabled>false</enabled>
        </snapshots>        
     </repository>
    <repository>
        <id>snapshot.open.revolsys.com</id>
        <url>http://open.revolsys.com/m2/snapshotRepository/</url>
        <releases>
           <enabled>false</enabled>
        </releases>
        <snapshots>
          <enabled>true</enabled>
        </snapshots>        
     </repository>
  </repositories>

  <distributionManagement>
  	<repository>
  		<id>open.revolsys.com</id>
  		<name>Revolution Systems Maven Repository</name>
  		<url>file:../../maven/com.revolsys.open/repository/</url>
  	</repository>
  	<snapshotRepository>
  		<id>snapshots-open.revolsys.com</id>
  		<name>Revolution Systems Maven Snapshot Repository</name>
  		<url>file:../../maven/com.revolsys.open/snapshotRepository/</url>
      <uniqueVersion>false</uniqueVersion>
  	</snapshotRepository>
  </distributionManagement>
  <properties>
  	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<com.revolsys.util.version>1.0.2-SNAPSHOT</com.revolsys.util.version>
		<com.revolsys.orm.version>1.0.0-SNAPSHOT</com.revolsys.orm.version>
		<org.springframework.version>3.0.1.RELEASE</org.springframework.version>
	</properties>
</project>