<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.revolsys</groupId>
  <artifactId>com.revolsys</artifactId>
  <packaging>pom</packaging>
  <name>Revolution Systems Open Library</name>
  <version>TRUNK-SNAPSHOT</version>
  <scm>
  	<connection>scm:svn:http://open.revolsys.com/svn/repos/com.revolsys/</connection>
  	<developerConnection>scm:svn:https://secure.revolsys.com/svn/open.revolsys.com/com.revolsys/</developerConnection>
  	<tag>trunk</tag>
  	<url>https://secure.revolsys.com/websvn/listing.php?repname=open.revolsys.com&amp;path=%2Fcom.revolsys%2F&amp;rev=0&amp;sc=0</url>
  </scm>
  <modules>
    <module>com.revolsys.core</module>
    <module>com.revolsys.orm</module>
    <module>com.revolsys.web</module>
    <module>com.revolsys.gis</module>
    <module>com.revolsys.jump</module>
  </modules>
  <organization>
  	<name>Revolution Systems Inc.</name>
  	<url>http://www.revolsys.com/</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Specification-Title>${project.name}</Specification-Title>
              <Specification-Vendor>Revolution Systems Inc.</Specification-Vendor>
              <Specification-Version>${project.version}</Specification-Version>
              <Implementation-Title>${project.name}</Implementation-Title>
              <Implementation-Vendor>Revolution Systems Inc.</Implementation-Vendor>
              <Implementation-Version>${buildNumber}</Implementation-Version>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
	      <groupId>org.codehaus.mojo</groupId>
	      <artifactId>buildnumber-maven-plugin</artifactId>
	      <version>1.0-beta-4</version>
	      <executions>
	        <execution>
	          <phase>validate</phase>        
	          <goals>
	            <goal>create</goal>
	          </goals>
	        </execution>
	      </executions>
	      <configuration>
	        <doUpdate>false</doUpdate>
	        <getRevisionOnlyOnce>true</getRevisionOnlyOnce>
	        <revisionOnScmFailure>true</revisionOnScmFailure>
	      </configuration>
	    </plugin>
    </plugins>
  </build>
  
  <profiles>
    <profile>
      <id>cargo-tomcat6</id>
      <activation>
      <property>
        <name>cargo.contextPath</name>
      </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.cargo</groupId>
            <artifactId>cargo-maven2-plugin</artifactId>
            <version>1.0.1-alpha-2</version>
            <configuration>
              <container>
                <containerId>tomcat6x</containerId>
                <type>remote</type>
              </container>
              <configuration>
                <type>runtime</type>
                <properties>
                  <cargo.tomcat.manager.url>${cargo.tomcat.manager.url}</cargo.tomcat.manager.url>
                  <cargo.remote.username>${cargo.remote.username}</cargo.remote.username>
                  <cargo.remote.password>${cargo.remote.password}</cargo.remote.password>
                </properties>
              </configuration>
              <deployer>
                <type>remote</type>
                <deployables>
                  <deployable>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <type>war</type>
                    <properties>
                      <context>${cargo.contextPath}</context>
                    </properties>
                  </deployable>
                </deployables>
              </deployer>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <repositories>
    <repository>
        <id>open.revolsys.com</id>
        <url>http://open.revolsys.com/m2/repository/</url>
        <releases>
           <enabled>true</enabled>
        </releases>
        <snapshots>
          <enabled>false</enabled>
        </snapshots>        
     </repository>
    <repository>
        <id>snapshot.open.revolsys.com</id>
        <url>http://open.revolsys.com/m2/snapshotRepository/</url>
        <releases>
           <enabled>false</enabled>
        </releases>
        <snapshots>
          <enabled>false</enabled>
        </snapshots>        
     </repository>
     <repository>
       <id>JBOSS</id>
       <name>JBoss Repository</name>
       <url>http://repository.jboss.org/maven2/</url>
       <releases>
       </releases>
       <snapshots>
       	<enabled>false</enabled>
       </snapshots>
     </repository>
  </repositories>

  <distributionManagement>
  	<repository>
  		<id>open.revolsys.com</id>
  		<name>Revolution Systems Maven Repository</name>
  		<url>file:../../maven/com.revolsys.open/repository/</url>
  	</repository>
  	<snapshotRepository>
  		<id>snapshots-open.revolsys.com</id>
  		<name>Revolution Systems Maven Snapshot Repository</name>
  		<url>file:../../maven/com.revolsys.open/snapshotRepository/</url>
      <uniqueVersion>false</uniqueVersion>
  	</snapshotRepository>
  </distributionManagement>
  <properties>
  	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <cargo.tomcat.manager.url>http://localhost:8080/manager</cargo.tomcat.manager.url>
    <cargo.remote.username>admin</cargo.remote.username>
    <cargo.remote.password>manager</cargo.remote.password>
    <org.slf4j.version>1.5.11</org.slf4j.version>
		<org.springframework.version>3.0.2.RELEASE</org.springframework.version>
		<org.springframework.security.version>3.0.2.RELEASE</org.springframework.security.version>
	</properties>
</project>